{{ 'section-custom.css' | asset_url | stylesheet_tag }}

<h2>{{ section.settings.title }}</h2>
{% if settings.background_color_custom != blank %}
<p>
salut
</p>
{% endif %}
{% for block in section.blocks %}
  {% case block.type %}
    {% when 'liquid' %}
    <div {{ block.shopify_attributes }}>
      {{ block.settings.liquid }}
    </div>
    {% when 'custom-text' %}
    <div {{ block.shopify_attributes }}>
      {{ block.settings.custom-text-field }}
    </div>
  {% endcase %}
{% endfor %}

{% schema %}
  {
    "name": "Custom Content",
    "tag": "section",
    "class": "custom",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Custom content heading",
        "default": "Title"
      }
    ],
    "blocks": [
      {
        "name": "Custom Liquid",
        "type": "liquid",
        "settings": [
          {
            "type": "liquid",
            "id": "liquid",
            "label": "Custom Liquid",
            "info": "Add Liquid code to create theme customizations."
          }
        ]
      }, {
        "name": "Custom Text",
        "type": "custom-text",
        "settings": [
          {
            "type": "textarea",
            "id": "custom-text-field",
            "label": "Text"
          }
        ]
      }
    ],
    "max_blocks": 2,
    "presets": [
      {
        "name": "Custom Content",
        "blocks": [
          {
            "type": "liquid"
          }, {
            "type": "custom-text"
          }
        ]
      }
    ]
  }
{% endschema %}